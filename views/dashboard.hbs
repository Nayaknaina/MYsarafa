<style>
    .otp-input::-webkit-outer-spin-button,
    .otp-input::-webkit-inner-spin-button {
        -webkit-appearance: none;
        margin: 0;
    }

    .otp-input[type="number"] {
        -moz-appearance: textfield;
        /* Firefox */
    }

    .otp-input {
        border-radius: 0.75rem;
        border-width: 2px;
        border-color: #e5e7eb;
        outline-style: none;
        width: 3.5rem;
        height: 3.5rem;
        font-size: 1.25rem;
        line-height: 1.75rem;
        font-weight: 600;
        text-align: center;
        transition-property: all;
        background-color: rgba(255, 255, 255, 0.8);
        transition-timing-function: cubic-bezier(0.4, 0, 0.2, 1);
        transition-duration: 300ms;
        backdrop-filter: blur(4px);
    }

    .otp-input:focus {
        border-color: #3b82f6;
        box-shadow: var(--tw-ring-inset) 0 0 0 calc(4px + var(--tw-ring-offset-width)) var(--tw-ring-color);
        --tw-ring-color: #dbeafe;
        background-color: #ffffff;
        transform: scale(1.05);
    }

    .otp-input:not(:placeholder-shown) {
        border-color: #34d399;
        background-color: #ecfdf5;
    }

    [type="submit"]:disabled,
    button:disabled {
        opacity: 0.5;
        cursor: not-allowed;
           background-image: linear-gradient(to right, #2a4aa7, #224485);
        transform: scale(1);
        box-shadow: none;
        transition: none;
    }

    button:disabled:hover {
        background-image: linear-gradient(to right, #224485, #2a4aa7);
        transform: scale(1);
        box-shadow: none;
        transition: none;
    }
    .search-container {
            position: relative;
            margin-bottom: 1.5rem;
        }
        .grpsearch-input {
            width: 100%;
            padding: 0.35rem 1rem 0.35rem 1.75rem;
            border: 2px solid #e5e7eb;
            border-radius: 0.75rem;
            font-size: 1rem;
            outline: none;
            transition: all 0.3s ease;
        }
        .grpsearch-input:focus {
            border-color: #3b82f6;
            box-shadow: 0 0 0 4px rgba(59, 130, 246, 0.1);
        }
        .grpsearch-icon {
            position: absolute;
            left: 0.75rem;
            top: 50%;
            transform: translateY(-50%);
            color: #6b7280;
        }
        .leave-group-btn{
                color:#fff ;
                background-color: rgb(255, 46, 46);
                padding: 8px 16px;
                border-radius: 8px;
                border: none;
                cursor: pointer;
                transition: transform 0.3s;
                font-size: 12px;
        }
    @media (max-width: 768px) {
        .leave-group-btn{
            margin-left: 0px;
            margin-top: 10px;
        }
    }
