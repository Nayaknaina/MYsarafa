<style>
    .otp-input::-webkit-outer-spin-button,
    .otp-input::-webkit-inner-spin-button {
        -webkit-appearance: none;
        margin: 0;
    }

    .otp-input[type="number"] {
        -moz-appearance: textfield;
        /* Firefox */
    }

    .otp-input {
        border-radius: 0.75rem;
        border-width: 2px;
        border-color: #e5e7eb;
        outline-style: none;
        width: 3.5rem;
        height: 3.5rem;
        font-size: 1.25rem;
        line-height: 1.75rem;
        font-weight: 600;
        text-align: center;
        transition-property: all;
        background-color: rgba(255, 255, 255, 0.8);
        transition-timing-function: cubic-bezier(0.4, 0, 0.2, 1);
        transition-duration: 300ms;
        backdrop-filter: blur(4px);
    }

    .otp-input:focus {
        border-color: #3b82f6;
        box-shadow: var(--tw-ring-inset) 0 0 0 calc(4px + var(--tw-ring-offset-width)) var(--tw-ring-color);
        --tw-ring-color: #dbeafe;
        background-color: #ffffff;
        transform: scale(1.05);
    }

    .otp-input:not(:placeholder-shown) {
        border-color: #34d399;
        background-color: #ecfdf5;
    }

    [type="submit"]:disabled,
    button:disabled {
        opacity: 0.5;
        cursor: not-allowed;
           background-image: linear-gradient(to right, #2a4aa7, #224485);
        transform: scale(1);
        box-shadow: none;
        transition: none;
    }

    button:disabled:hover {
        background-image: linear-gradient(to right, #224485, #2a4aa7);
        transform: scale(1);
        box-shadow: none;
        transition: none;
    }
</style>

