<div id="profileModal" class="modal-overlay" style="display:none;">
    <div class="modal-content">
        <div class="modal-header">
            <span>Profile Details</span>
            <button class="modal-close-btn" id="closeProfileModal">&times;</button>
        </div>
        <div class="modal-body">
            <form id="profileForm" action="/user-app/update-profile" method="POST">
                <div class="modal-form-group">
                    <label for="profilePicture">Profile Picture</label>
                    <img id="profilePicturePreview" src="{{user.profilePicture}}" alt="Profile Picture" style="width: 100px; height: 100px; object-fit: cover; border-radius: 50%; margin-bottom: 10px;" />
                    <input type="file" id="profilePicture" name="profilePicture" class="modal-input" accept="image/*">
                </div>
                <div class="modal-form-group">
                    <label for="profileName" class="required">First Name</label>
                    <input type="text" id="profileName" name="f_name" class="modal-input" value="{{user.f_name}}"
                        required>
                </div>

                <div class="modal-form-group">
                    <label for="lastName" class="required">Last Name</label>
                    <input type="text" id="lastName" name="l_name" class="modal-input" value="{{user.l_name}}" required>
                </div>

                <div class="modal-form-group">
                    <label for="profileEmail" class="required">Email</label>
                    <input type="email" id="profileEmail" name="email" class="modal-input" value="{{user.email}}"
                        required>
                </div>

                <div class="modal-form-group">
                    <label for="profilepassword" class="required">Password</label>
                    <input type="password" id="profilepassword" class="modal-input" value="********" disabled>
                </div>

                <div class="modal-form-group">
                    <label for="profileDOB" class="required">Date of Birth</label>
                    <input type="date" id="profileDOB" name="dob" class="modal-input" value="{{user.dob}}" required>
                </div>

                <div class="modal-form-group">
                    <label for="profilePhone">Phone</label>
                    <input type="tel" id="profilePhone" name="phone" class="modal-input" value="{{user.phone}}">
                </div>

                <div class="modal-form-group">
                    <label for="Country">Country</label>
                    <input type="text" id="Country" name="country" class="modal-input" value="{{user.country}}"
                        required>
                </div>

                <div class="modal-form-group">
                    <label for="Pincode">Pincode</label>
                    <input type="text" id="Pincode" name="pincode" class="modal-input" value="{{user.pincode}}"
                        required>
                </div>

                <div class="modal-form-group">
                    <label for="profileAddress">Address</label>
                    <textarea id="profileAddress" name="address"
                        class="modal-input modal-textarea">{{user.address}}</textarea>
                </div>

                <div class="modal-form-group">
                    <label for="shopname">Shop Name</label>
                    <input type="text" id="shopname" name="shopname" class="modal-input" value="{{user.shopname}}"
                        required>
                </div>

                <div class="modal-form-group">
                    <label for="shopaddress">Shop Address</label>
                    <input type="text" id="shopaddress" name="shopadd" class="modal-input" value="{{user.shopadd}}"
                        required>
                </div>
                <div class="modal-form-group">
                    <label for="categorySelect" class="required">Category</label>
                    <select id="categorySelect" name="category" class="modal-input" required>
                        <option value="">Select Category</option>
                        <option value="Jeweller Shop Owner" {{#if_eq user.category "Jeweller Shop Owner"}}selected{{/if_eq}}>Jeweller Shop Owner</option>
                        <option value="Hallmarking Center/Bullion/Gold Exchange" {{#if_eq user.category "Hallmarking Center/Bullion/Gold Exchange"}}selected{{/if_eq}}>Hallmarking Center/Bullion/Gold Exchange</option>
                        <option value="Gold Silver Refinery" {{#if_eq user.category "Gold Silver Refinery"}}selected{{/if_eq}}>Gold Silver Refinery</option>
                        <option value="Bengali/Soni Karigar" {{#if_eq user.category "Bengali/Soni Karigar"}}selected{{/if_eq}}>Bengali/Soni Karigar</option>
                        <option value="Taar Vala/Dai Vala" {{#if_eq user.category "Taar Vala/Dai Vala"}}selected{{/if_eq}}>Taar Vala/Dai Vala</option>
                        <option value="Wholesaler" {{#if_eq user.category "Wholesaler"}}selected{{/if_eq}}>Wholesaler</option>
                        <option value="Retailer" {{#if_eq user.category "Retailer"}}selected{{/if_eq}}>Retailer</option>
                        <option value="Manufacturer" {{#if_eq user.category "Manufacturer"}}selected{{/if_eq}}>Manufacturer</option>
                        <option value="Trader" {{#if_eq user.category "Trader"}}selected{{/if_eq}}>Trader</option>
                        <option value="Artisan/Craftsman" {{#if_eq user.category "Artisan/Craftsman"}}selected{{/if_eq}}>Artisan/Craftsman</option>
                    </select>
                </div>
                <div class="modal-form-group">
                    <label for="Employee">NumberEmp</label>
                    <input type="number" id="Employee" name="no_of_emp" class="modal-input" value="{{user.no_of_emp}}"
                        required>
                </div>

                <div class="modal-footer">
                    <button type="button" class="modal-btn modal-btn-secondary" id="closeProfileModal2">Cancel</button>
                    <button type="submit" class="modal-btn modal-btn-primary">Save</button>
                </div>
            </form>

        </div>
    </div>
</div>